<Window x:Class="TensileTestingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TensileTestingApp"
        mc:Ignorable="d"
        Title="Tensile Testing" Height="950" Width="1280" Icon="/TensileTestingIcon.png" WindowStartupLocation="CenterScreen">
    
    <Grid VerticalAlignment="Top" HorizontalAlignment="Left" ShowGridLines="True" Height="900" Width="1280">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="ComPortPanel"  Grid.Row="0" Grid.Column="0" VerticalAlignment="Top">
            <StackPanel.DataContext>
                <local:MyViewModel/>
            </StackPanel.DataContext>
            <Grid Margin="0 0 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            
                <Label x:Name="ComPortLabel" Content="Select COM port" VerticalAlignment="Top" Grid.Column="0" HorizontalAlignment="Left" Margin="5, 5, 5, 5"/>
                <ComboBox x:Name="ComPortComboBox" Width="150" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Margin="5, 5, 5, 5"/>
            </Grid>

            <Grid Margin="0 0 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    <Label x:Name="AddressLabel" Content="Address: (0-255)" VerticalAlignment="Top" Grid.Column="0" HorizontalAlignment="Left" Margin="5, 5, 5, 5"/>
                    <!-- TODO: Do validation for address input (only allow numbers between 0-255) -->
                
                    <TextBox x:Name="AddressTextBox" Width="150" Height="25" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 5, 5, 5" DataContextChanged="IntValue">
        
                        <TextBox.Text>
                            <Binding Path="IntValue" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <local:IntRangeValidator Min="0" Max="255"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>
            <Grid Margin="0 0 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="BaudRateLabel" Content="Baud Rate:" Grid.Column="0"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 5, 5, 5"/>
                <ComboBox x:Name="BaudRateComboBox" Width="150" Height="25" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 5, 5, 5" SelectedIndex="0">
                    <ComboBoxItem Content="9600" />
                    <ComboBoxItem Content="19200"/>
                    <ComboBoxItem Content="38400"/>
                    <ComboBoxItem Content="57600"/>
                    <ComboBoxItem Content="115200"/>
                </ComboBox>
            </Grid>
            <Grid Margin="0 0 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="OpenCOM" Content="Open COM Port" Width="150" Height="30" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 10, 5, 5" Click="OpenCOM_Click"/>
                <Button x:Name="CloseCOM" Content="Close COM Port" Width="150" Height="30" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 10, 5, 5" Click="CloseCOM_Click"/>
            </Grid>
        </StackPanel>

        <StatusBar x:Name="StatusBar" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="25" Width="640">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="COM port status: Disconnected" />
            </StatusBarItem>
        </StatusBar>

    </Grid>

   

</Window>
